<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_seat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ishang.asterisk.application05191.SelectSeatActivity">

    <TextView
        android:text="Departure Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView15"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="Flight Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Aircraft:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView20"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Cabin Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView22"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnsubmit"
        android:layout_above="@+id/btnback_seat"
        android:layout_alignStart="@+id/btnback_seat" />

    <Button
        android:text="Back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnback_seat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:text="Select Seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:id="@+id/gridimg"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_height="wrap_content"
        android:horizontalSpacing="100dp"
        android:layout_above="@+id/btnsubmit"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_height="30dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignEnd="@+id/btnsubmit"
            android:id="@+id/image1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/chair_occupied"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignEnd="@+id/btnsubmit"
            android:id="@+id/image2"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/chair_yourchosen"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignEnd="@+id/btnsubmit"
            android:id="@+id/image3"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <TextView
            android:text="Available Seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="Occupied Seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <TextView
            android:text="Your Chosen Seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>


    </GridLayout>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textfltnum1"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textdeptime1"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/textfltnum1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textaircraft1"
        android:layout_above="@+id/textView22"
        android:layout_alignStart="@+id/btnsubmit" />

    <TextView
        android:text="First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView22"
        android:layout_toEndOf="@+id/textView15"
        android:id="@+id/textView33" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/gridseat1"
        android:rowCount="4"
        android:columnCount="7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text=""
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="30dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="3"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/r3c0" />
        <TextView
            android:text="1"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="2"
            android:layout_row="2"
            android:layout_column="6"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="3"
            android:layout_row="3"
            android:layout_column="6"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/r3c6" />
        <TextView
            android:text="A"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:text="C"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="J"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="L"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s1A"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s1C"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s1J"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s1L"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s2A"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s2C"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s2J"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s2L"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s3A"
            android:onClick="onClick"/>
        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s3C"
            android:onClick="onClick"/>

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s3L"
            android:onClick="onClick"/>

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:id="@+id/s3J"
            android:onClick="onClick"/>

    </GridLayout>


</RelativeLayout>
